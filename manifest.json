{
  "manifest_version": 2,
  "name": "Mark as done",
  "version": "0.3.3",
  "description": "Keep track of your progress!",
  "background": {
    "scripts": ["global.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "/images/icon-toolbar.png"
    }
  },
  "icons": {
    "128": "/images/icon-done.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "web_accessible_resources": [
    "images/icon-todo.png",
    "images/icon-started.png",
    "images/icon-done.png"
  ],
  "incognito": "not_allowed"
}
