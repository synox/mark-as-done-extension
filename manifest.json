{
  "manifest_version": 2,
  "name": "Mark as done",
  "version": "0.4.0",
  "description": "Keep track of your progress!",
  "background": {
    "scripts": ["3rdparty/browser-polyfill.min.js",  "src/global.js", "src/service-worker.js"]
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "128": "/images/icon-toolbar-disabled.png"
    }
  },
  "icons": {
    "128": "/images/icon-done.png"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "browser_style": true
  },
  "web_accessible_resources": [
    "images/icon-todo.png",
    "images/icon-started.png",
    "images/icon-done.png"
  ],
  "incognito": "not_allowed",
  "browser_specific_settings": {
    "gecko": {
      "id": "synox@github.com"
    }
  }
}
